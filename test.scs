write "Write a Number >> " 
set numz = [input]

write "Write a second Number >> " 
set numo = [input]

write "Write an Operator (+-*/) >> " 
set op = [input]

if op = "+" >fn_add
if op = "-" >fn_sub
if op = "*" >fn_mul
if op = "/" >fn_div
die


:fn_add
write [con [con numz " + "] numo]
write " = "
print [add numz numo]
return


:fn_sub
write [con [con numz " - "] numo]
write " = "
print [sub numz numo]
return


:fn_mul
write [con [con numz " * "] numo]
write " = "
print [mul numz numo]
return


:fn_div
write [con [con numz " / "] numo]
write " = "
print [int [div numz numo]]
return