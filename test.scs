write "Write a Number >> " 
set numz = [input]

write "Write a second Number >> " 
set numo = [input]

write "Write an Operator (+-*/) >> " 
set op = [input]

if op = "+" >fnadd
if op = "-" >fnsub
if op = "*" >fnmul
if op = "/" >fndiv
die


:fnadd
write [con [con numz " + "] numo]
write " = "
print [add numz numo]
return


:fnsub
write [con [con numz " - "] numo]
write " = "
print [sub numz numo]
return


:fnmul
write [con [con numz " * "] numo]
write " = "
print [mul numz numo]
return


:fndiv
write [con [con numz " / "] numo]
write " = "
print [int [div numz numo]]
return